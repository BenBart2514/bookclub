<h1>Books</h1>

<% if policy(Book).new? %>
    <p><%= link_to "New Book", new_book_path %></p>
<% end %>

<table>
    <tr>
        <th>Cover</th>
        <th id= "table_title">Title</th>
        <th id= "table_author">Author</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td><%= cl_image_tag book.cover.key, crop: :scale, width: 50, cloud_name: 'bbart121' if book.cover.attached? %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.author.full_name %></td>
        </tr>
    <% end %>
</table>
